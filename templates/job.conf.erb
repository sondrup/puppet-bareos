Job {
    Name             = <%= @name %>
    Type             = <%= @jobtype %>
    Client           = <%= @clientcert %>-fd
    FileSet          = <%= @fileset_real %>
<% if @pool -%>
    Pool             = <%= @pool %>
<% end -%>
<% if @storage -%>
    Storage          = <%= @storage %>
<% end -%>
<% if @jobtype == "Restore" -%>
    Where            = <%= @restoredir %>
<%   if !@messages -%>
    Messages         = Standard
<%   end -%>
<% elsif @jobtype == "Backup" -%>
<% if @pool_full -%>
    Full Backup Pool        = <%= scope.lookupvar('bareos::params::storage') %>-Pool-Full
<% end -%>
<% if @pool_inc -%>
    Incremental Backup Pool  = <%= scope.lookupvar('bareos::params::storage') %>-Pool-Inc
<% end -%>
<% if @pool_diff -%>
    Differential Backup Pool = <%= scope.lookupvar('bareos::params::bareos_storage') %>-Pool-Diff
<% end -%>
<% elsif @jobtype == "Copy" or @jobtype == "Migrate" -%>
<% if @selection_type -%>
    Selection Type = <%= @selection_type %>
<% end -%>
<% if @selection_pattern -%>
    Selection Type = <%= @selection_pattern %>
<% end -%>
<% end -%>

<% if @jobdef -%>
    JobDefs          = "<%= @jobdef %>"
<% end -%>
<% @runscript.each do |script| -%>
    RunScript {
      RunsWhen = <%= script.fetch('runs_when') %>
<% if script['runs_on_success'] -%>
      RunsOnSuccess = <%= script.fetch('runs_on_success') %>
<% end -%>
<% if script['runs_on_failure'] -%>
      RunsOnFailure = <%= script.fetch('runs_on_failure') %>
<% end -%>
<% if script['runs_on_client'] -%>
      RunsOnClient = <%= script.fetch('runs_on_client') %>
<% end -%>
<% if script['fail_job_on_error'] -%>
      FailJobOnError = <%= script.fetch('fail_job_on_error') %>
<% end -%>
      Command = <%= script.fetch('command').inspect %>
<% if script['console'] -%>
      Console = <%= script.fetch('console').inspect %>
<% end -%>
    }
<% end -%>
    Accurate         = <%= @accurate %>
<% if @level -%>
    Level            = <%= @level %>
<% end -%>
<% if @messages -%>
    Messages         = <%= @messages %>
<% end -%>
<% if @sched -%>
    Schedule         = <%= @sched %>
<% end -%>
<% if @priority -%>
    Priority         = <%= @priority %>
<% end -%>
<%= scope.function_template(['bareos/_job_reschedule.erb']) -%>
}
