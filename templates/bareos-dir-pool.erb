Pool {
    Name                 = <%= @name %>
    Pool Type            = <%= @pool_type %>
    Recycle              = <%= @recycle %>
    AutoPrune            = <%= @autoprune %>
    Action On Purge      = <%= @action_on_purge %>
<% if @volume_retention -%>
    Volume Retention     = <%= @volume_retention %>
<% end -%>
<% if @volume_use_duration -%>
    Volume Use Duration = <%= @volume_use_duration %>
<% end -%>
<% if @label -%>
    Label Format         = "<%= @label %>"
<% end -%>
<% if @max_volumes -%>
    Maximum Volumes      = <%= @max_volumes %>
<% end -%>
<% if @max_volume_jobs -%>
    Maximum Volume Jobs  = <%= @max_volume_jobs %>
<% end -%>
<% if @max_volume_bytes -%>
    Maximum Volume Bytes = <%= @max_volume_bytes %>
<% end -%>
<% if @storage -%>
    Storage              = <%= @storage %>-sd
<% end -%>
<% if @next_pool -%>
    Next Pool            = <%= @next_pool %>
<% end -%>
}
